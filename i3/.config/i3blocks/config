# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15
command=/usr/lib/i3blocks/$BLOCK_NAME/$BLOCK_NAME

[pacman]
command=untracked-packages
label=  
color=#ff5555
interval=once

[keyboard]
command=setxkbmap -query | grep layout | cut -d: -f2 | tr -d ' '
interval=5
color=#f1fa8c
label= 

[recording]
command=pgrep ffmpeg >/dev/null && echo '' || echo ''
interval=5
color=#ff79c6

[microphone]
command=(pactl list sources | grep -A 20 'Source #1' | grep 'Mute: yes' >/dev/null) && echo  || echo 
interval=1

[volume]
command=(pactl list sinks | ag 'yes' | ag -o mute) || (pactl list sinks | ag '\tVolume' | ag -o '\d+%' | head -1)
label=♪ 
interval=1
color=#bd93f9

[memory]
label= 
interval=15
color=#ff55555

[cpu_usage]
label= 
interval=10
color=#50fa7b

[temperature]
label= 
interval=15

[wifi]
label= 
command=grep wlan0 /proc/net/wireless | awk '{ print int($3 * 100 / 70) "%"}'
interval=5
color=#8be9fd

[battery]
label= 
command=python ~/.i3/scripts/battery.py
interval=30

[datetime]
label= 
command=date '+%a %b %d %_I:%M%p'
interval=5
color=#6272a4
