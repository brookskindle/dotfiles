# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15
command=/usr/lib/i3blocks/$BLOCK_NAME/$BLOCK_NAME

[keyboard]
command=setxkbmap -query | grep layout | cut -d: -f2 | tr -d ' '
interval=5
color=#f1fa8c
label= 

[recording]
command=pgrep ffmpeg >/dev/null && echo 'RECORDING' || echo 'OFF'
interval=5
color=#ff79c6
label= 

[volume]
label=♪
instance=Master -D pulse
interval=1
signal=10
color=#bd93f9

[memory]
label= 
interval=15
color=#ff55555

[cpu_usage]
label= 
interval=10
color=#50fa7b

[temperature]
label= 
interval=15

[battery]
label= 
command=python ~/.i3/scripts/battery.py
interval=30

[datetime]
label= 
command=date '+%a %b %d %H:%M'
interval=5
color=#6272a4
