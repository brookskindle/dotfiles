#!/usr/bin/env python3
"""
Gaps - a simple way to set your gap level for i3-gaps from the command line
"""

import argparse
import subprocess

def main():
    parser = argparse.ArgumentParser()
    parser.add_argument("outer", help="specify the outer gap size in pixels")
    parser.add_argument("inner", help="specify the inner gap size in pixels")
    parser.add_argument("-a", "--all", action="store_true",
        help="Set the gap size across all workspaces, not just this one")

    args = parser.parse_args()

    gap_cmd_inner = "i3-msg gaps inner {workspace} set {pixels}".format(
        workspace="all" if args.all else "current", pixels=args.inner)

    gap_cmd_outer = "i3-msg gaps outer {workspace} set {pixels}".format(
        workspace="all" if args.all else "current", pixels=args.outer)

    subprocess.run(gap_cmd_inner.split())
    subprocess.run(gap_cmd_outer.split())


if __name__ == "__main__":
    main()
