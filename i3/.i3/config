# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# Want to know what a key is named? Use 'xev' to find out.

# Use Super (Windows) key as mod key
set $mod Mod4

#  ____  _             _                 ____            _       _
# / ___|| |_ __ _ _ __| |_ _   _ _ __   / ___|  ___ _ __(_)_ __ | |_ ___
# \___ \| __/ _` | '__| __| | | | '_ \  \___ \ / __| '__| | '_ \| __/ __|
#  ___) | || (_| | |  | |_| |_| | |_) |  ___) | (__| |  | | |_) | |_\__ \
# |____/ \__\__,_|_|   \__|\__,_| .__/  |____/ \___|_|  |_| .__/ \__|___/
#                               |_|                       |_|
exec --no-startup-id nm-applet
exec --no-startup-id xfce4-power-manager
exec --no-startup-id xfsettingsd
exec --no-startup-id xrdb -merge ~/.Xrofi  # Configure rofi
# numlockx doesn't work when keyboard is plugged in. Wait a few seconds before
# turning on numlock.
exec --no-startup-id "sleep 3 && numlockx &"
exec --no-startup-id "sh ~/.fehbg" # set wallpaper
# Start mpd as a normal user - requires that mpd be disabled as a daemon
# See http://unix.stackexchange.com/a/269329 for more info on this.
exec --no-startup-id mpd

#   ____
#  / ___| __ _ _ __  ___
# | |  _ / _` | '_ \/ __|
# | |_| | (_| | |_) \__ \
#  \____|\__,_| .__/|___/
#             |_|
# i3-gaps, a better way to prettify your i3 workspace
# https://github.com/Airblader/i3
gaps inner 20
gaps outer 20
# i3-gaps doesn't work well with titlebars
# https://github.com/Airblader/i3/issues/35#issuecomment-71341925
for_window [class="^.*"] border pixel 4
new_window pixel 4

set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym o      mode "$mode_gaps_outer"
    bindsym i      mode "$mode_gaps_inner"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Ctrl+c mode "default"
}

mode "$mode_gaps_inner" {
    bindsym plus  gaps inner current plus 5
    bindsym minus gaps inner current minus 5
    bindsym 0     gaps inner current set 0

    bindsym Shift+plus  gaps inner all plus 5
    bindsym Shift+minus gaps inner all minus 5
    bindsym Shift+0     gaps inner all set 0

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Ctrl+c mode "default"
}
mode "$mode_gaps_outer" {
    bindsym plus  gaps outer current plus 5
    bindsym minus gaps outer current minus 5
    bindsym 0     gaps outer current set 0

    bindsym Shift+plus  gaps outer all plus 5
    bindsym Shift+minus gaps outer all minus 5
    bindsym Shift+0     gaps outer all set 0

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Ctrl+c mode "default"
}

# Font for window titles and status bar (unless another font is specified in
# the bar {} block below.
font pango:FontAwesome 9

# Add FontAwesome icons to several often-used programs
for_window [class="Chromium-browser"] title_format " %title"
for_window [class="X-terminal-emulator"] title_format " %title"
for_window [class="Thunar"] title_format " %title"
for_window [class="yakyak"] title_format " %title"
for_window [class="Steam"] title_format " %title"
for_window [class="Gimp"] title_format " %title"
for_window [class="VirtualBox"] title_format " %title"
for_window [class="libreoffice.*"] title_format " %title"

# Use $mod+Left Mouse to drag floating windows to their wanted position
# Use $mod+Right Mouse to resize floating windows
floating_modifier $mod

bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+b exec x-www-browser
bindsym $mod+t exec thunar
bindsym $mod+x exec "~/bin/lock.sh"
bindsym --release Print exec xfce4-screenshooter
bindsym $mod+d exec rofi -show run
bindsym $mod+slash exec rofi -show window
# When focusing outputs left and right will loop, enabling you to cycle through
# all your outputs with a single keybind.
bindsym $mod+semicolon exec i3-msg focus output left
bindsym $mod+shift+semicolon exec i3-msg move workspace to output left

# Volume controls
bindsym XF86AudioMute exec amixer -D pulse sset Master toggle
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 3%-
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 3%+
bindsym F10 exec amixer -D pulse sset Master toggle
bindsym F11 exec amixer -D pulse sset Master 3%-
bindsym F12 exec amixer -D pulse sset Master 3%+

# Monitor config (re-apply wallpaper afterwards, it usually gets messed up)
bindsym XF86Display exec xfce4-display-settings -m && sh ~/.fehbg
bindsym F7 exec xfce4-display-settings -m && sh ~/.fehbg

# Kill focused window
bindsym $mod+Shift+q kill

# Hide/show floating scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+shift+minus move scratchpad

# Move around windows in a vim-like fashion
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split in horizontal orientation (which is vertical, it's kind of dumb)
bindsym $mod+o split v

# Split in vertical orientation (which is actually horizontal, it's odd)
bindsym $mod+v split h

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# Change container layout (stacked, tabbed, toggle next)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Prevent rdesktop from starting in floating mode
for_window [class="rdesktop"] floating disable

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# On the current monitor, change focus/window to the previous or next workspace
bindsym $mod+comma workspace prev_on_output
bindsym $mod+period workspace next_on_output
bindsym $mod+shift+comma move workspace prev_on_output
bindsym $mod+shift+period move workspace next_on_output

# Jump to a workspace or window
bindsym $mod+n exec ~/.i3/scripts/focus.sh

# Rename the current workspace
bindsym $mod+m exec ~/.i3/scripts/rename.sh

# Switch to the last workspace used
bindsym $mod+apostrophe workspace back_and_forth
bindsym $mod+shift+apostrophe move container to workspace back_and_forth

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec i3-msg exit

# Resize a window
mode "resize" {
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink width 10 px or 10 ppt
    bindsym h resize grow width 10 px or 10 ppt
    bindsym Shift+j resize shrink height 2 px or 2 ppt
    bindsym Shift+k resize grow height 2 px or 2 ppt
    bindsym Shift+l resize shrink width 2 px or 2 ppt
    bindsym Shift+h resize grow width 2 px or 2 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Ctrl+c mode "default"
}
bindsym $mod+r mode "resize"

# Display workspace status bar
bar {
  position top
  status_command i3blocks
  font pango:FontAwesome 10
  colors {
    background #232323
    statusline #DCDCDC
  }
}

# https://i3wm.org/docs/userguide.html#_changing_colors
# class                 border  backgr. text    indicator child_border
client.focused 			#4c7899 #3cd6b7 #393e40 #2e9ef4
client.focused_inactive #333333 #5f676a #ffffff #484e50
client.unfocused		#333333 #222222 #888888 #292d2e
client.urgent			#2f343a #900000 #ffffff #900000
